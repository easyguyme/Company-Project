{
  "$schema": "http://json-schema.org/draft-03/schema",
  "type": "object",
  "properties": {
    "sku": {
      "type": "string",
      "required": true,
      "description": "the product number"
    },
    "name": {
      "type": "string",
      "required": true,
      "description": "the name(or title) of the product"
    },
    "pictures": {
      "type": "array",
      "required": false,
      "description": "the unit of size is byte"
    },
    "category": {
      "type": "array",
      "required": true,
      "description": "the category of the product"
    },
    "intro": {
      "type": "string",
      "required": false,
      "description": "the descption of the product"
    }
  }
}